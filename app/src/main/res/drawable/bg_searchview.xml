<!-- res/drawable/bg_searchview.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo -->
    <solid android:color="#FFFFFFFF"/> <!-- blanco -->

    <!-- Borde -->
    <stroke
        android:width="2dp"
        android:color="#FF9800"/> <!-- naranja -->

    <!-- Esquinas redondeadas -->
    <corners android:radius="12dp"/>

    <!-- Espaciado interno -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
